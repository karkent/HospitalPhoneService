<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace路径-->
<mapper namespace="com.example.hospitalphoneservice.mapper.TrashInCheckMapper">
    <select id="trashNumCheck" parameterType="String" resultType="com.example.hospitalphoneservice.bean.Trash">
        SELECT bagcode,boxcode,weight,infoid FROM tblmedicaltype where collectid = #{userId} AND state = 6
    </select>

    <select id="waring"  resultType="com.example.hospitalphoneservice.bean.Waring">
        SELECT * FROM tblwarning
    </select>

    <update id="trashTypeChange"  parameterType="com.example.hospitalphoneservice.bean.User">
       update tblmedicaltype SET state = 7 where state = 6 and collectid = #{collect}
    </update>
<!--        医废id 用户 id 时间 重量 -->
    <insert id="trashInTable"  parameterType="java.util.List">
        insert
        into
            tbltrashin
            (infoid,enterid,enterweight,enterdate,spare1)
            value
        <foreach collection="list" item="item" index="index" separator="," >
            (#{item.infoid},#{item.userId},#{item.weight},#{item.time},"0")
        </foreach>
    </insert>

</mapper>